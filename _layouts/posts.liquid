---
layout: default
---
{% assign year = page.date | date: '%Y' %}
{% assign tags = page.tags | join: '' %}
{% assign categories = page.categories | join: '' %}

{% if page._styles %}
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

{% assign url_beginning = page.url | slice: 0, 6 %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-meta">
      {{ page.date | date: '%B %d, %Y' }}
      {% if page.author %} &middot; {{ page.author }}{% endif %}
      {% if page.last_updated %} &middot; updated {{ page.last_updated | date: '%B %d, %Y' }}{% endif %}
      {% if page.meta %} &middot; {{ page.meta }}{% endif %}
    </p>
    <p class="post-tags">
      {% if url_beginning == '/blog/' %}
        <a href="{{ year | prepend: '/blog/' | prepend: site.baseurl}}">{{ year }}</a>
      {% else %}
        {{ year }}
      {% endif %}
      {% if tags != '' %}
        &middot;
        {% for tag in page.tags %}
          {% if url_beginning == '/blog/' %}
            <a href="{{ tag | slugify | prepend: '/blog/tag/' | prepend: site.baseurl}}">#{{ tag }}</a>
          {% else %}
            #{{ tag }}
          {% endif %}
          {% unless forloop.last %}&nbsp;{% endunless %}
        {% endfor %}
      {% endif %}
      {% if categories != '' %}
        &middot;
        {% for category in page.categories %}
          {% if url_beginning == '/blog/' %}
            <a href="{{ category | slugify | prepend: '/blog/category/' | prepend: site.baseurl}}">{{ category }}</a>
          {% else %}
            {{ category }}
          {% endif %}
          {% unless forloop.last %}&nbsp;{% endunless %}
        {% endfor %}
      {% endif %}
    </p>
  </header>

  <article class="post-content">
    {% if page.toc and page.toc.beginning %}
      <div id="table-of-contents">
        {% toc %}
      </div>
      <hr>
    {% endif %}
    <div id="markdown-content">
      {{ content }}
    </div>
  </article>

  {% if page.citation %}
    {% include citation.liquid %}
  {% endif %}

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.related_blog_posts.enabled %}
    {% if page.related_posts == null or page.related_posts %}
      {% include related_posts.liquid %}
    {% endif %}
  {% endif %}

  {% if site.disqus_shortname and page.disqus_comments %}
    {% include disqus.liquid %}
  {% endif %}
  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
